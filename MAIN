#include <Arduino.h>
#if defined(ESP32)
  #include <WiFi.h>
#elif defined(ESP8266)
  #include <ESP8266WiFi.h>
#endif
#include <Firebase_ESP_Client.h>
#include "addons/TokenHelper.h"
#include "addons/RTDBHelper.h"

// Wi-Fi credentials
#define WIFI_SSID "WIFI LAPTOP DANG DUNG"
#define WIFI_PASSWORD "MAT KHAU WIFI"

// Firebase configuration
#define API_KEY "API CUA PROJECT"
#define DATABASE_URL "LINK DATABASE CUA PROJECT"

FirebaseData fbdo;
FirebaseAuth auth;
FirebaseConfig config;

unsigned long sendDataPrevMillis = 0;
int count = 0;
bool signupOK = false;

// Button and LED pins
#define BUTTON_PIN 2
#define LED_PIN 4

bool ledState = false; // Current state of the LED
bool lastButtonState = HIGH; // Last button state

void connectWiFi() {
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to Wi-Fi");
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(300);
  }
  Serial.println();
  Serial.print("Connected with IP: ");
  Serial.println(WiFi.localIP());
  Serial.println();
}

void setupFirebase() {
  config.api_key = API_KEY;
  config.database_url = DATABASE_URL;

  if (Firebase.signUp(&config, &auth, "", "")) {
    Serial.println("Firebase SignUp OK");
    signupOK = true;
  } else {
    Serial.printf("Firebase SignUp Failed: %s\n", config.signer.signupError.message.c_str());
  }

  config.token_status_callback = tokenStatusCallback; // Callback for token status
  Firebase.begin(&config, &auth);
  Firebase.reconnectWiFi(true);
}

void setup() {
  Serial.begin(115200);
  pinMode(BUTTON_PIN, INPUT_PULLUP); // Button with internal pull-up
  pinMode(LED_PIN, OUTPUT);          // LED output
  digitalWrite(LED_PIN, LOW);        // Turn off LED initially

  connectWiFi();
  setupFirebase();
}

void loop() {
  // Read button state
  bool currentButtonState = digitalRead(BUTTON_PIN);

  // Detect button press (debounced)
  if (lastButtonState == HIGH && currentButtonState == LOW) {
    ledState = !ledState; // Toggle LED state
    digitalWrite(LED_PIN, ledState ? HIGH : LOW);
  }
  lastButtonState = currentButtonState;

  if (Firebase.ready() && signupOK && (millis() - sendDataPrevMillis > 2000 || sendDataPrevMillis == 0)) {
    sendDataPrevMillis = millis();

    // Send integer data
    if (Firebase.RTDB.setInt(&fbdo, "test/int", count)) {
      Serial.println("PASSED: Int Sent");
    } else {
      Serial.printf("FAILED to send int: %s\n", fbdo.errorReason().c_str());
    }
    count++;

    // Send LED state to Firebase
    if (Firebase.RTDB.setBool(&fbdo, "test/LEDState", ledState)) {
      Serial.println("PASSED: LED State Sent");
    } else {
      Serial.printf("FAILED to send LED state: %s\n", fbdo.errorReason().c_str());
    }
  }
}
